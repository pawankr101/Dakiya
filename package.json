{
    "name": "dakiya",
    "version": "1.0.0",
    "description": "this is a chat app which provide end to end communication solution.",
    "private": true,
    "type": "module",
    "engine-strict": true,
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "client:build": "cd ./client && npm run build",
        "client:start": "cd ./client && npm start",
        "client:lint": "cd ./client && npm run lint",
        "client:test": "cd ./client && npm run test",
        "server:build": "cd ./server && npm run build",
        "server:build:prod": "cd ./server && npm run build:prod",
        "server:start": "cd ./server && npm start",
        "server:start:process": "cd ./server && npm run start:process",
        "server:lint": "cd ./server && npm run lint",
        "server:test": "cd ./server && npm run test",
        "build": "concurrently --kill-others \"npm run server:build\" \"npm run client:build\"",
        "build:prod": "concurrently --kill-others \"npm run server:build:prod\" \"npm run client:build\"",
        "lint": "concurrently --kill-others \"npm run server:lint\" \"npm run client:lint\"",
        "start": "concurrently --kill-others \"npm run server:start\" \"npm run client:start\"",
        "reinstall": "rm -rf node_modules && rm -f package-lock.json && npm install",
        "update": "ncu -u && npm run reinstall"
    },
    "dependencies": {
        "fastify": "^5.7.4",
        "jws": "^4.0.1",
        "mime": "^4.1.0",
        "mongodb": "^7.1.0",
        "nodemailer": "^8.0.1",
        "uuid": "^13.0.0",
        "ws": "^8.19.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.4.2",
        "@nozbe/watermelondb": "^0.28.0",
        "@types/jws": "^3.2.11",
        "@types/node": "^25.2.3",
        "@types/nodemailer": "^7.0.10",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "@types/ws": "^8.18.1",
        "concurrently": "^9.2.1",
        "esbuild": "^0.27.3",
        "esbuild-plugin-tailwindcss": "^2.1.0",
        "npm-check-updates": "^19.3.2",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-router-dom": "^7.13.0",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3"
    },
    "keywords": [
        "chat",
        "call"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pawankr101/Dakiya.git"
    },
    "homepage": "https://github.com/pawankr101/Dakiya#readme",
    "bugs": {
        "url": "https://github.com/pawankr101/Dakiya/issues"
    },
    "author": {
        "name": "Akshay Kumar",
        "email": "pawan.akshaykr@gmail.com"
    },
    "contributors": [
        {
            "name": "Akshay Kumar",
            "email": "pawan.akshaykr@gmail.com"
        }
    ],
    "license": "ISC"
}
