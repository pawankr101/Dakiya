{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "src/**", "client.js", "server.js"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noStaticOnlyClass": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 4
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
      },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "none",
            "semicolons": "always",
            "bracketSameLine": true,
            "arrowParentheses": "always",
            "bracketSpacing": true
        }
    },
    "html": {
        "formatter": {
            "bracketSameLine": true
        }
    }
}
